{
    "manifest_version": 2,
    "name": "Timer",
    "version": "1.0",
    "description": "Project",
    "icons": {
        "128": "/images/icon128.png",
        "48": "/images/icon48.png",
        "16": "/images/icon16.png"
    },

    "browser_action":{
        "default_icon": "/images/icon16.png",
        "default_popup": "index.html"
    },
    
    "background":{
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}